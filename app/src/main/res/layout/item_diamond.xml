<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/img_diamond"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@color/main_color" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/diamond_play" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="6dp"
        android:paddingLeft="10dp">

        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_diamond_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="标题"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_diamond_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/time"
            android:drawablePadding="6dp"
            android:text="2017-2-18"
            android:textColor="@color/text_gray2"
            android:textSize="12sp" />

        <TextView
            android:visibility="gone"
            android:layout_weight="1"
            android:id="@+id/tv_diamond_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:drawableLeft="@mipmap/view"
            android:drawablePadding="6dp"
            android:text="2017-2-18"
            android:textColor="@color/text_gray2"
            android:textSize="11sp" />

        <TextView
            android:layout_marginRight="10dp"
            android:id="@+id/tv_diamond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/zuanshi"
            android:drawablePadding="6dp"
            android:text="20"
            android:textColor="#DC68D2"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/img_buy"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/buy"
            />


    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="#f5f5f5" />

</LinearLayout>
