<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    android:background="@mipmap/toorbar_bg">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/broder_layout_bg"
        android:padding="20dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_channel_logo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@mipmap/logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_channel_logo"
            android:orientation="vertical"
            android:paddingTop="2dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小姐姐"
                    android:textColor="#000"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="直播平台"
                    android:textColor="@color/text_gray2"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:background="@mipmap/zb_num"
                    android:drawableLeft="@mipmap/zb"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="4dp"
                    android:textColor="@color/white"
                    android:text="0"
                    android:gravity="center"
                    android:textSize="11sp" />
            </LinearLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/img_channel_logo"
                android:background="@color/text_gray2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/img_channel_logo"
                android:layout_toRightOf="@+id/img_channel_logo"
                android:lineSpacingMultiplier="1.5"
                android:text="本平台所有直播及图片内容全部是由服务器从第三方获取内容"
                android:textColor="@color/text_gray2"
                android:textSize="10sp" />
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>
