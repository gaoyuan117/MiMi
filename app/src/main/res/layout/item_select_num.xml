<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.xzwzz.mimi.widget.RoundLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_icon_select_num"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/zuanshi" />

            <TextView
                android:id="@+id/tv_diamondsnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:textColor="@color/text_black2_color"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/btn_preice_text"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/btn_diamonds_select_num"
            android:gravity="center"
            android:padding="8dp"
            android:text="1.00"
            android:textColor="#FAA9C9" />

    </com.xzwzz.mimi.widget.RoundLayout>
</LinearLayout>